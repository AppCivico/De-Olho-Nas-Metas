
[%-CALL assets.include("js/jshashtable-3.0.js")%]
[%-CALL assets.include("js/jquery.numberformatter.min.js")%]

<script>
$(document).ready(function () {
       $('.priceformat').formatNumber({format:"#,###.00",locale: "br" });
});
</script>

[% FOR cp IN companies%]
    <section class="project-detail metas-detail">
		<div class="container">

			<div class="row">
				<div class="col-sm-8">
				
					<div class="body">
						<h4 class="subtitle blue">Empresa</h4>
						<h1>[% cp.business_name %]</h1>

						<div class="list_budget">

							<h3>Total Recebido: <strong>R$<span class="priceformat">[% cp.total_value %]</span></strong></h3>
							<table id="list_budgets" class="table table-striped">
								<thead>
									<tr>
					    	            <th>Descrição da despesa</th>
					    	            <th>Custo (R$)</th>
									</tr>
								</thead>
								<tbody>
						[% IF cp.agg_budgets.size > 0 %]
						[%FOR x IN cp.agg_budgets%]
								<tr>
									<td>[% x.0 %]</td>
									<td class="priceformat" width="80">[% x.1 %]</td>
								</tr>
			            [%END%]
						[% ELSE %]
								<tr>
									<td colspan="3">Nenhum valor encontrado.</td>
								</tr>
						[% END %]
		
								</tbody>
							</table>

						</div>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="list-box list-green">
						<span class="header">[%cp.goals.size%] Meta[% IF cp.goals.size > 1%]s[% END%] associada[% IF cp.goals.size > 1 %]s[% END %]</span>
						[% FOREACH g IN cp.goals%]
						<ul class="list-goals">
							<li><a href="[% c.uri_for_action('/homefuncional/goal/detail',[ g.0 ] ) %]">[% g.1 %]</a></li>
						</ul>
						[% END%]
					</div>
				</div>
			</div>
		</div>
	</section>
[% END%]
