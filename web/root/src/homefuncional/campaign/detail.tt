	<section class="metas-filtro orange">
		<div class="container">
			<form>
				<div class="col-sm-6 cep">
					Encontre a campanha<br />
					<input type="text" placeholder="CEP">
					<button><span class="glyphicon glyphicon-search"></span></button>
				</div>
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-12 region">
							Filtrar Campanha<br />
							<div class="select-stylized">
							<select>
								<option>Nome da regi√£o
							</select>
							</div>
						</div>
					</div>
				</div>
				<div class="clear"></div>
			</form>
		</div>
    </section>

   <section class="metas-detail region-detail">
	<div id="result" class="container">

		<div class="row">
			<div class="col-sm-12">
				<section class="campaign-detail">
					<div class="row">
						<div class="col-sm-12">
							<img src="/static/css/images/meta01.jpg" border="0" class="campaign-image"><h1>[%campaign_obj.name%]</h1><br />
							<p>[%campaign_obj.description%]</p>
						</div>
					</div>
				</section>

				<section class="event-list">
					<h3>Participe dos Eventos</h3>
					<ul>
						[% IF campaign_obj.events.size > 0 %]
						<li>
						[% FOREACH event IN campaign_obj.events%]
						<span class="date"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> [% ymd_to_human(event.date)%]</span>
						<p class="contents">  
							<a href="[% c.uri_for_action('/homefuncional/event/detail',[event.id] ) %]" class="name">[% event.name%]</a>[% UNLESS event.id == campaign_obj.events.last.id %]
							<p>[%event.description%]</p>
						</p>
						[% END%]
						[% END %]
						</li>
						[%ELSE%]
						<li>NENHUM EVENTO ENCONTRADO</li>
						[% END %]
					</ul>
				</section>
	
			</div>
		</div>
	</div>
    </section>
