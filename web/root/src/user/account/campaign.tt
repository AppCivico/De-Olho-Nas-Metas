										[%input_text('description','Descrição:', req=>1)|none%]
									
									<div class="row">
										<div class="col-sm-6">
	            								[%input_text('start_in','Data Começo', classes => ['span3', 'date' ,'datepicker'], req => 0)|none%]
												[%input_text('end_on','Data Final:', classes => ['span3' , 'date', 'datepicker'],req=>0)|none%]
										</div>
									</div>
									
									[%input_text('form_ident', '' , req=>1, value => "form", type => 'hidden')|none%]
									<button type="reset"  class="btn btn-danger pull-left">Limpar</button>
									<input type="submit" value="Cadastrar" class="btn btn-success pull-right"/>
								
									</form>

								</div>
								<div role="tabpanel" id="tab-campanhas" class="tab-pane [% IF !body.form_ident && !form_ident%]active[%END%] ">
